<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/containertanggaldeliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="19/07/2021"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:id="@+id/tanggaldeliver"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1625290316734"
                android:textSize="18sp"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:id="@+id/idDeliver"/>
        </LinearLayout>
        <TextView
            android:id="@+id/namacust"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAJANG KURNIAWAN"
            android:layout_marginTop="10dp"
            android:textSize="21dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/lokasicust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="lokasi"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                android:text="✖"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:backgroundTint="#E31E1E"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/success"
                android:text="✔"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:backgroundTint="#16c60c"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>