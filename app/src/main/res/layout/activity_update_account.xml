<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpdateAccount">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bglogin">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_arrow_back_24_white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Update Account"
            android:textColor="@color/white"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="100dp"
        android:id="@id/container"
        android:layout_below="@id/toolbar">
        <ImageView
            android:id="@+id/photo"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />
    </androidx.cardview.widget.CardView>
    <EditText
        android:enabled="false"
        android:drawableLeft="@drawable/custom_email"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_below="@id/container"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:id="@+id/email"/>
    <EditText
        android:drawableLeft="@drawable/custom_person"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="fullname"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email"
        android:id="@+id/nama"/>
    <EditText
        android:enabled="false"
        android:drawableLeft="@drawable/custom_lock"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="password"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nama"
        android:id="@+id/password"/>
    <EditText
        android:enabled="false"
        android:drawableLeft="@drawable/custom_phone"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="phone number"
        android:phoneNumber="true"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password"
        android:id="@+id/nomorhp"/>
    <Button
        android:id="@+id/button_update"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_below="@id/password"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/background_home"/>


</RelativeLayout>