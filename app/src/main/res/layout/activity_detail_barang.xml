<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMenu"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgDetail"
        android:layout_width="match_parent"
        android:layout_height="340dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailmenu_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken"
                android:textFontWeight="500"
                android:textColor="#E31E1E"
                android:textSize="20dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/namaDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            <TextView
                android:id="@+id/deskripsiDetail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Deskripsi"
                android:textSize="18sp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/hargaMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textSize="28dp"
                android:textColor="#E31E1E"
                android:fontFamily="sans-serif-medium"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp">

                    <ImageButton
                        android:src="@drawable/ic_decrement"
                        android:id="@+id/decrement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quantity"
                        android:text="0"
                        android:textSize="35sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <ImageButton
                        android:src="@drawable/ic_increment"
                        android:id="@+id/increment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />

                </LinearLayout>
            <Button
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit"
                android:text="Submit"
                android:textSize="20sp"
                android:background="@drawable/background_home"
                android:textColor="@color/white"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>