<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAccount">
    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/textregist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginLeft="40dp"
        android:textSize="25dp"
        android:textColor="#E31E1E"
        android:layout_below="@id/logo"/>
    <EditText
        android:drawableLeft="@drawable/custom_email"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_below="@id/textregist"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:id="@+id/email"/>
    <EditText
        android:drawableLeft="@drawable/custom_person"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="fullname"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email"
        android:id="@+id/nama"/>
    <EditText
        android:drawableLeft="@drawable/custom_lock"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="password"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nama"
        android:id="@+id/password"/>
    <EditText
        android:drawableLeft="@drawable/custom_phone"
        android:drawablePadding="12dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="phone number"
        android:phoneNumber="true"
        android:ems="15"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/password"
        android:id="@+id/nomorhp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/background_home"
        android:textColor="@color/white"
        android:layout_below="@id/nomorhp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonsave"/>
    <TextView
        android:id="@+id/tologinpage"
        android:layout_below="@id/buttonsave"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColor="#0087f5"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:text="already have account ? sign here"/>

</RelativeLayout>